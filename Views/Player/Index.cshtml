@model Player

@{
    ViewData["Title"] = "Jogador";
}

<h1>Tela de Jogadores</h1>

<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>E-mail</th>
        <th>Equipe</th>
    </thead>
    <tbody>
        @foreach(Player player in ViewBag.Players) {
            <tr>
                <td>@player.Id</td>
                <td>@player.Name</td>
                <td>@player.Email</td>
                <td>
                    <img src="/img/Teams/@player.Team.Image" alt="Logotipo da equipe" width="50px">
                </td>
            </tr>
        }
    </tbody>
</table>