@model Player

@{
    ViewData["Title"] = "Jogador";
}

<h1>Tela de Jogadores</h1>

<form method="post" action='@Url.Action("Register")' enctype="multipart/form-data">
    <label for="">Nome:</label>
    <input type="text" name="Name">

    <label for="">E-mail:</label>
    <input type="text" name="Email">

    <label for="">Senha:</label>
    <input type="password" name="Password">

    <select name="Team">
        @foreach (Team team in ViewBag.Teams)
        {
            <option value="@team.Id">@team.Name</option>
        }
    </select>
    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>E-mail</th>
        <th>Equipe</th>
    </thead>
    <tbody>
        @foreach(Player player in ViewBag.Players) {
            <tr>
                <td>@player.Id</td>
                <td>@player.Name</td>
                <td>@player.Email</td>
                <td>
                    <img src="/img/Teams/@player.Team.Image" alt="Logotipo da equipe" width="50px">
                </td>
            </tr>
        }
    </tbody>
</table>