@model Team

@{
    ViewData["Title"] = "Edit";
}

<main>
    <section class="container-grid cadastro-equipes">
        <form class="frm-cad-equipe" method="post" action='@Url.Action("Update")' enctype="multipart/form-data">
            <div class="cadequipe-titulo">
                <h1>Cadastro de Equipes</h1>
                <hr>
            </div>

            <input type="hidden" name="Id" value="@ViewBag.Team.Id">

            <input class="campo-entrada" name="Name" type="text" value="@ViewBag.Team.Name">

            <label for="Image" class="foto">
                Selecionar Imagem
                <input style="display: none;" type="file" name="Image" id="Image" value="@ViewBag.Team.Image">
            </label>

            <input type="hidden" name="ImageUrl" value="@ViewBag.Team.Image">
            
            <button type="submit">Atualizar</button>
        </form>
    </section>
</main>

