@model Team

@{
    ViewData["Title"] = "Equipe";
}

<h1>Tela de Equipes</h1>

<form method="post" action='@Url.Action("Register")' enctype="multipart/form-data">
    <label for="">Nome</label>
    <input type="text" name="Name">

    <label for="">Imagem</label>
    <input type="file" name="Image">

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach(Team team in ViewBag.Teams) {
            <tr>
                <td>@team.Id</td>
                <td>@team.Name</td>
                <td>
                    <img src="/img/Teams/@team.Image" alt="Logotipo da equipe" width="50px">
                </td>
                <td>
                    <a asp-area="" asp-controller="Team" asp-action="Delete" asp-route-id="@team.Id">Deletar</a>
                </td>
                <td>
                    <a asp-area="" asp-controller="Team" asp-action="Edit" asp-route-id="@team.Id">Editar</a>
                </td>
            </tr>
        }

    </tbody>
</table>